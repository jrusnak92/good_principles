<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    user: <%= @user.inspect %><br/>
    signed_in? = <%= signed_in? %><br/>
    current_user = <%= current_user %>
    </div>
</div>